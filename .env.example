## Entorno Flask
# development | production
FLASK_ENV=development
# 1 para activar debug de Flask en local
FLASK_DEBUG=1

## Seguridad
SECRET_KEY=change_me_in_production

## Base de datos
# Local SQLite (solo desarrollo):
# SQLALCHEMY_DATABASE_URI=sqlite:///dev.db
# Postgres (local/neon/producción):
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://USER:PASSWORD@HOST:5432/DBNAME

## Subidas de archivos
MAX_IMAGE_MB=2
# Directorio en disco donde se guardan las fotos subidas
#   - Local: ./uploads
#   - Render: /opt/render/project/src/uploads
UPLOADS_DIR=./uploads

## (Opcional) Rate limiting
# RATELIMIT_DEFAULT=100 per minute

## (Opcional) Redis / cache (aún no usado en el código)
# REDIS_URL=redis://:password@host:6379/0
